{
  "name": "@codegateway/core",
  "version": "1.0.0",
  "description": "Core analysis engine for CodeGateway",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && cp -r src/git/hooks dist/git/",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "format": "biome format --write ."
  },
  "dependencies": {
    "@codegateway/shared": "workspace:*",
    "ts-morph": "^27.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "typescript": "^5.9.0",
    "@types/bun": "latest"
  }
}
