{
  "name": "codegateway",
  "version": "1.0.0",
  "description": "AI Code Review Trust Layer - Spell-check for AI-assisted coding",
  "private": true,
  "workspaces": [
    "packages/*",
    "demo"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf .turbo node_modules/.cache",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "turbo": "2.7.2",
    "typescript": "^5.3.0"
  },
  "packageManager": "bun@1.3.5",
  "engines": {
    "node": ">=20.0.0"
  }
}
